@model List<SuperStore_WebSite.Models.SANPHAM>

@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_ProductPage.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">            
            <hr />
            <div class="row">
                @if (Model.Any())
                {
                    <h2>Những sản phẩm được tìm thấy!</h2>
                    foreach (var product in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 product-wap rounded-0">
                                <div class="card rounded-0">
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <h4 class="card-img"> <img class="card-img rounded-0 img-fluid" src="~/Resources/img/@product.HINHANH"></h4>
                                            <h4 class="card-title">@product.TENSP</h4>
                                            <p class="card-text">Description: @product.GHICHU</p>
                                            <p class="card-text">Price: @String.Format("{0:0,0 VNĐ}", product.GIABAN)</p>
                                            <a href="@Url.Action("Details", "Product", new { MaSP = product.MASP })" class="btn btn-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                <h2>Không tìm thấy sản phẩm nào! Vui lòng nhập đúng từ khóa.</h2>
                }
            </div>
         </div>
     </div>
</div>
