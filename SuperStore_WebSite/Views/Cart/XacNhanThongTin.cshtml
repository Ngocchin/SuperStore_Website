@using SuperStore_WebSite.Models;
@model KHACHHANG
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_ProductPage.cshtml";
    List<Giohang> gio = Session["GioHang"] as List<Giohang>;
}
<main role="main">
    <!-- Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content` -->
    <div class="container mt-4">
        <form action="/Cart/Order" enctype="multipart/form-data" method="post">
            <input type="hidden" name="kh_tendangnhap" value="dnpcuong">
            <div class="py-5 text-center">
                <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                <h2>Thanh toán</h2>
                <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
            </div>
            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Giỏ hàng</span>
                        @Html.Action("GiohangPartial", "Cart", null)
                    </h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                @foreach (var item in gio)
                                {
                                    <tr>
                                        @*<td>@item.thongtinSP.MASP</td>*@
                                        <h6>@item.thongtinSP.TENSP</h6>
                                        <small>Số lượng: @item.SL</small>
                                        <small>Đơn giá: @String.Format("{0:0,0 VNĐ}", @item.ThanhTien)</small>
                                    </tr>
                                }
                            </div>
                        @*<li class="list-group-item d-flex justify-content-between">
                            <span>Tổng tiền thanh toán:</span>
                            <strong>@Html.Action("tongThanhTien", "Cart")</strong>
                        </li>*@                       
                    </ul>
                </div>
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Thông tin khách hàng</h4>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="kh_ten">Họ tên</label>
                            <p>@Model.TENKH</p>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_diachi">Địa chỉ</label>
                            <p>@Model.DIACHI</p>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_dienthoai">Điện thoại</label>
                            <p>@Model.SDT</p>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_email">Email</label>
                            <p>@Model.EMAIL</p>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_ngaysinh">Ngày đặt</label>
                            <p>@DateTime.Now.ToShortDateString()</p>
                        </div>
                    </div>

                    <h4 class="mb-3">Hình thức thanh toán</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="httt-1" name="httt_ma" type="radio" class="custom-control-input" required=""
                                   value="1">
                            <label class="custom-control-label" for="httt-1">Tiền mặt</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="httt-2" name="httt_ma" type="radio" class="custom-control-input" required=""
                                   value="2">
                            <label class="custom-control-label" for="httt-2">Chuyển khoản</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="httt-3" name="httt_ma" type="radio" class="custom-control-input" required=""
                                   value="3">
                            <label class="custom-control-label" for="httt-3">Ship COD</label>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit" name="btnDatHang">
                        Đặt
                        hàng
                    </button>
                </div>
            </div>
        </form>

    </div>
</main>


