                    @Html.ValidationMessageFor(model => model.NGAYLAPPHIEU, "", new { @class = "text-danger" })
                </div>*@
                <div class="text-center">
                    <div class="form-group">
                        <input type="submit" value="Thêm" class="btn btn-primary" />
                    </div>
