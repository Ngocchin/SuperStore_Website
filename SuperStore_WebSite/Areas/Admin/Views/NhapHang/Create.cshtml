@model SuperStore_WebSite.Models.PHIEUNHAP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPage2.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PHIEUNHAP</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })        
        <div class="form-group">
            @Html.LabelFor(model => model.MANCC, "Nhà cung cấp")
            @Html.DropDownListFor(model => model.MANCC, ViewBag.MANCC as SelectList, "-- Chọn nhà cung cấp --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MANCC, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NGAYLAPPHIEU, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.NGAYLAPPHIEU, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.NGAYLAPPHIEU, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
